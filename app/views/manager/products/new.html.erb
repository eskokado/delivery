<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="mb-4 pb-6 border-b">
    <nav aria-label="breadcrumb" class="my-6 font-medium flex text-slate-500 dark:text-slate-200 text-sm">
      <ol class="flex flex-wrap items-center space-x-3">
        <li>
          <%= link_to t('.last'), manager_products_path, class: "hover:underline hover:text-slate-600 dark:hover:text-slate-400" %>
        </li>
        <li class="flex space-x-3">
          <div class="flex items-center">
            <span class="text-slate-300 dark:text-slate-500">/</span>
          </div>
          <span class="text-primary-600 dark:text-primary-500" aria-current="page">New</span>
        </li>
      </ol>
    </nav>
  </div>

  <div>
    <%= simple_form_for @product , url: manager_products_path,
                        html: { class: 'form_product_new relative',
                                data: {
                                  controller: 'nested-form',
                                  nested_form_wrapper_selector_value: '.nested-form-wrapper'
                                }
                        } do |form| %>

      <div class="flex justify-between items-center mb-12">
        <h1 class="font-bold text-4xl"><%= t('.title') %></h1>
        <%= form.button :submit, t('.save'), class: 'cursor-pointer' %>
      </div>
      <%= render "form", product: @product, form: form %>
    <% end %>
  </div>
</div>
