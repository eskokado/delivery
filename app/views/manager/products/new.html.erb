<%= simple_form_for @product, url: manager_products_path, html: { class: 'form_product_new relative', data: { controller: 'nested-form', nested_form_wrapper_selector_value: '.nested-form-wrapper' } } do |form| %>
  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl"><%= t('.add_product') %></h1>
    <div>
      <%= form.button :submit, t('.save'), class: 'cursor-pointer' %>
    </div>
  </div>
  <%= render "form", product: @product, form: form %>
<% end %>
