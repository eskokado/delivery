<div class="flex justify-center">
  <div class="text-center">
    <h1 class="text-3xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight my-3">Forgot your password?</h1>
    <p class="mb-6 text-slate-700 dark:text-slate-200">Or <%= link_to "Sign in", new_session_path(resource_name), class: "btn-link" %> na sua conta</p>
  </div>
</div>

<%= render "shared/error_messages", resource: resource %>

<div class="flex justify-center">
  <div class="rounded-md bg-white p-6 dark:bg-slate-800 dark:text-white border border-slate-300/70 dark:border-slate-600/70 md:w-[550px]">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <div class="relative">
          <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-input focus:pl-10 peer transition", pattern: "[^@\s]+@[^@\s]+\.[^@\s]+", title: "Invalid email address" %>
          <%= icon "envelope", classes: "w-5 h-5 absolute translate-x-0 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-0 transition transform peer-focus:opacity-100 peer-focus:translate-x-3 dark:peer-focus:text-primary-400" %>
        </div>
      </div>

      <%= f.submit "Forgot your password", class: "btn btn-primary hover:cursor-pointer w-full" %>
    <% end %>
  </div>
</div>
